<div class="static-top">
    <div class="top-left">
        <div class="nav-button">
            <div class="row 1"></div>
            <div class="row 2"></div>
            <div class="row 3"></div>
        </div>
        <h1 class="brand"><a href="/">Jamie Appleby</a></h1>
    </div>
    
    <div class="link-to-instagram">
        <a href="https://www.instagram.com/jamieapplebyphotography/" target="_blank" rel="noopener noreferrer"><img src="../assets/icons/intagram.svg" alt="Instagram ->"></a>
    </div>
</div>
<nav class="nav-wrapper">
    <ul class="nav-links">
        <!-- Loop through the navigation items -->
        {{#foreach navigation}}
            {{#if_equals slug "fashion"}} <!-- Fashion Dropdown Link -->
                <li class="nav-{{slug}}{{#if current}} nav-current{{/if}} dropdown">
                    <div class="dropdown-parent"><a href="{{url absolute="true"}}">{{label}}</a><img class="dropdown-icon" src="../assets/icons/dropdown.svg" alt="Dropdown Icon">
                        <div class="dropdown-child">
                            <a href="/thrasher">Archive</a>
                            <a href="/thrasher">Portraiture</a>
                        </div>
                    </div>
                </li>

                {{else}}

                {{#if_equals slug "documentary"}} <!-- Portraiture Dropdown Link -->
                    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}} dropdown">
                        <div class="dropdown-parent"><a href="{{url absolute="true"}}">{{label}}</a><img class="dropdown-icon" src="../assets/icons/dropdown.svg" alt="Dropdown Icon">
                            <div class="dropdown-child">
                                <a href="/thrasher">Thrasher - a brand involvement</a>
                            </div>
                        </div>
                    </li>

                {{else}} <!-- Standard Link -->
                    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}">
                        <a href="{{url absolute="true"}}">{{label}}</a>
                    </li>

                {{/if_equals}}
            {{/if_equals}}
        {{/foreach}}
        <!-- End the loop -->
    </ul>
    
</nav>